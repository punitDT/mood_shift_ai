# ============================================
# AD CONFIGURATION
# ============================================
# Show interstitial ad every N shifts
AD_INTERSTITIAL_FREQUENCY=4
# Ad-free period duration in hours
AD_FREE_PERIOD_HOURS=24
# Golden voice period duration in hours
GOLDEN_VOICE_PERIOD_HOURS=1

# ============================================
# SPEECH RECOGNITION CONFIGURATION
# ============================================
# Maximum user input duration (1 minute = 60 seconds)
# Recording stops when user releases the button or after 60 seconds
# These settings are now handled in the service code directly

# ============================================
# DEVELOPMENT/PRODUCTION MODE
# ============================================
# Set to 'true' for development, 'false' for production
DEBUG_MODE=true
USE_TEST_ADS=true

